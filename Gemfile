# frozen_string_literal: true

source "https://rubygems.org"

gem 'sinatra'
gem 'sinatra-contrib' # For additional helpers like JSON
gem 'faraday'         # For HTTP requests
gem 'dotenv'          # For environment variables
gem 'pry'             # For debugging

group :development, :test do
  gem 'rspec'
  gem 'rspec-core'
  gem 'rspec-expectations'
  gem 'rspec-mocks'
  gem 'rack-test'        # To test Sinatra routes
  # gem 'dotenv'
  gem 'webmock'          # To mock HTTP requests
  gem 'figaro'
end